<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/forgot_password_bg"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vidsapp.VidsActivity"
    tools:showIn="@layout/activity_vids">

    <RelativeLayout
        android:id="@+id/main_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/subcat_title_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/subcat_bg">

            <TextView
                android:id="@+id/cat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <GridView
            android:id="@+id/gridView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subcat_title_layout"
            android:columnWidth="100dp"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:paddingBottom="15dp"
            android:paddingTop="10dp"
            android:verticalSpacing="10dp"></GridView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/myvideo_title_layout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/subcat_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="My videos"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <Button
                android:id="@+id/add_button_generic"
                android:layout_width="95dp"
                android:layout_height="28dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:text="Add videos"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/button_bg"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_video_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/myvideo_title_layout"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"/>

        <ProgressBar
            android:id="@+id/progressbar"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/empty_my_video_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Your Videos list is empty!\n\n"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Hey! Here you can add the videos of your choice!\nStart adding your videos here by searching from millions of videos available \n\nOR \n\nWatch the best in class videos categorized by VidsApp choosing from left navigation menu"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:layout_below="@id/text2"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:text="Start adding videos"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/button_bg"/>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
